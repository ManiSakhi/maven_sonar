pipeline {
    agent any

    stages {
        stage('Build & SonarQube Scanner') {
            steps {
                script {
                    def mavenHome = tool 'Maven'
                    env.PATH = "${mavenHome}/bin:${env.PATH}"
                    
                    withSonarQubeEnv('sonarqube') {
                        sh 'mvn clean package sonar:sonar'
                    }
                }
            }
        }
    }
}
