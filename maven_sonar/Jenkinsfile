pipeline {
    agent any
    stages {
        stage("Build & SonarQube Scanner") {
            agent any
            steps {
                withEnv([
                    "PATH+MAVEN=/usr/bin/mvn",
                    // Other environment variables
                ]) {
                    withSonarQubeEnv('sonarqube') {
                        sh 'mvn clean package sonar:sonar'
                    }
                }
            }
        }
    }
}
